@model IndexViewModel

<div class="container d-grid justify-content-center text-center mt-2">
	<h1 class="font-roboto"> @(User!.FindFirst("DisplayName")?.Value)</h1>
	<p class="mt-1 mb-0 font-roboto"><span class="fw-bold">Id: </span>@Model.User.Id</p>
	<p class="mt-1 mb-0 font-roboto"><span class="fw-bold">Role: </span>@Model.User.Role</p>

	
	<p class="mt-1 mb-0 font-roboto"><span class="fw-bold">First Name: </span>@Model.UserProfile.FirstName</p>
	<p class="mt-1 mb-0 font-roboto"><span class="fw-bold">Last Name: </span>@Model.UserProfile.LastName</p>
	<p class="mt-1 mb-0 font-roboto"><span class="fw-bold">Email: </span>@Model.User.Email</p>

	@if (Model.User.PhoneNumber != null)
	{
		<p class="mt-1 mb-0 font-roboto"><span class="fw-bold">Phone Number: </span>@Model.User.PhoneNumber</p>
	}


	<p class="mt-1 mb-0 font-roboto"><span class="fw-bold">Street Name: </span>@Model.UserProfile.StreetName</p>
	<p class="mt-1 mb-0 font-roboto"><span class="fw-bold">Postal Code: </span>@Model.UserProfile.PostalCode</p>
	<p class="mt-1 mb-0 font-roboto"><span class="fw-bold">City: </span>@Model.UserProfile.City</p>


	@if (User.IsInRole("admin"))
	{
		<div class="d-flex justify-content-center mt-3">
			<a class="btn-theme mb-5" asp-controller="admin" asp-action="index">ADMIN PAGE</a>
		</div>
	}

</div>