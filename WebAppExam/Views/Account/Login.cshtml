@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<section class="loginform">
    <div class="container">
        <div class="form-content">
            <form method="post" onsubmit="validateAllLogin(event)" novalidate>

                <div class="line">
                    <div asp-validation-summary="ModelOnly" class="error-text"></div>
                </div>

                <div class="line">
                    <div class="email-content">
                        <label asp-for="Email"></label>
                        <a asp-controller="account" asp-action="register">Don't have an Account yet?</a>
                    </div>
                    <input asp-for="Email" onkeyup="validateInput(event)" id="login-email" required />
                    <span asp-validation-for="Email" id="login-email-span" class="error-text"></span>
                    <div id="login-email-error" class="error-text"></div>
                </div>

                <div class="line">
                    <div class="password-content">
                        <label asp-for="Password"></label>
                        <a asp-controller="account" asp-action="newpassword" tabindex="-1">Forgot Your Password?</a>
                    </div>
                    <input asp-for="Password" onkeyup="validateInput(event)" id="login-password" required />
                    <span asp-validation-for="Password" id="login-password-span" class="error-text"></span>
                    <div id="login-password-error" class="error-text"></div>
                </div>

                <button class="btn-theme" type="submit">Submit</button>
                <div id="form-error" class="error-text mt-2"></div>

            </form>
        </div>
    </div>
</section>
