@model SameProductsViewModel

<section class="sameproducts">
    <div class="container">
        <div class="heading">@Model.Heading</div>

        @if (Model.GridItems != null)
        {
            <div class="row row-cols-4">

                @foreach (var item in Model.GridItems)
                {
                    <partial name="/Views/Partials/_GridCollectionItem.cshtml" model="item" />
                }

            </div>
        }

    </div>
</section>